{
  "name": "runbook-admin",
  "version": "0.1.0",
  "description": "Local GUI for running and managing Runn runbooks",
  "type": "module",
  "bin": {
    "runbook-admin": "./dist/bin/runbook-admin.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && pnpm run build:cli",
    "build:cli": "tsc src/bin/runbook-admin.ts --outDir dist/bin --target es2022 --module node16 --moduleResolution node16",
    "start": "node dist/bin/runbook-admin.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:list": "playwright test --reporter=list",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "typecheck": "tsc --noEmit",
    "agentcheck": "pnpm check && pnpm build && pnpm test:run && pnpm test:e2e:list"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "chokidar": "^3.5.3",
    "hono": "^4.6.0",
    "honox": "^0.1.24",
    "js-yaml": "^4.1.0",
    "open": "^10.1.0",
    "prismjs": "^1.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.5.0",
    "@types/prismjs": "^1.26.5",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.4",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "runn",
    "runbook",
    "testing",
    "automation",
    "cli",
    "gui"
  ],
  "author": "nacal",
  "license": "MIT"
}
